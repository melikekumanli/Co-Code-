@{
    var isAuthenticated = Context.Session.GetInt32("UserId") != null;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var isAuthPage = currentController == "Account" && (currentAction == "Login" || currentAction == "Register");
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - co-code</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    @if (isAuthPage || !isAuthenticated)
    {
        <!-- Auth Pages Layout (No Sidebar) -->
        @RenderBody()
    }
    else
    {
        <!-- Dashboard Layout (With Sidebar) -->
        <div class="dashboard-wrapper">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="sidebar-header">
                    <a href="/" class="sidebar-logo">
                        <i class="bi bi-code-slash"></i>
                        co-code
                    </a>
                </div>
                <nav class="sidebar-nav">
                    <a href="@Url.Action("Index", "Projects")" class="sidebar-nav-item @(currentController == "Projects" && currentAction == "Index" ? "active" : "")">
                        <span class="sidebar-nav-icon"><i class="bi bi-folder"></i></span>
                        Projelerim
                    </a>
                    <a href="@Url.Action("Public", "Projects")" class="sidebar-nav-item @(currentController == "Projects" && currentAction == "Public" ? "active" : "")">
                        <span class="sidebar-nav-icon"><i class="bi bi-grid"></i></span>
                        Proje Havuzu
                    </a>
                    <a href="@Url.Action("Index", "Invitations")" class="sidebar-nav-item @(currentController == "Invitations" ? "active" : "")">
                        <span class="sidebar-nav-icon"><i class="bi bi-envelope"></i></span>
                        Davetler
                    </a>
                    <a href="@Url.Action("Index", "Developers")" class="sidebar-nav-item @(currentController == "Developers" ? "active" : "")">
                        <span class="sidebar-nav-icon"><i class="bi bi-stars"></i></span>
                        Yeteneklerim
                    </a>
                    <div style="border-top: 1px solid var(--border); margin: 16px 0;"></div>
                    <a href="@Url.Action("Logout", "Account")" class="sidebar-nav-item">
                        <span class="sidebar-nav-icon"><i class="bi bi-box-arrow-right"></i></span>
                        Çıkış Yap
                    </a>
                </nav>
            </aside>

            <!-- Main Content -->
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
