@model DevTeamFinder.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="auth-logo">
            <div class="auth-logo-text">
                <i class="bi bi-code-slash"></i> co-code
            </div>
        </div>

        <h1 class="auth-title">Hesap Oluştur</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="Register" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="AdSoyad">Ad Soyad</label>
                <input asp-for="AdSoyad" class="form-control" placeholder="Adınız ve Soyadınız" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="ornek@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sifre">Şifre</label>
                <input asp-for="Sifre" class="form-control" type="password" placeholder="En az 6 karakter" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SifreTekrar">Şifre Tekrar</label>
                <input asp-for="SifreTekrar" class="form-control" type="password" placeholder="Şifrenizi tekrar giriniz" />
                <span asp-validation-for="SifreTekrar" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Hesap Oluştur</button>
        </form>

        <div class="auth-footer">
            Zaten hesabın var mı? <a asp-action="Login">Giriş Yap</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
